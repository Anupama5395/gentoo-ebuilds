description="Create list of required static device nodes for the current kernel"

depend() {
	after dev-mount
	before tmpfiles.dev dev
	keyword -lxc -systemd-nspawn
}

start() {
	ebegin "Creating list of required static device nodes for the current kernel"
	checkpath -q -d /var/run/tmpfiles.d
	kmod static-nodes --format=tmpfiles --output=/var/run/tmpfiles.d/kmod.conf
	eend $?
}
