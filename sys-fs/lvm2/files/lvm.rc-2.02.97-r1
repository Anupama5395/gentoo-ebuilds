depend() {
	use dmeventd
	before checkfs fsck
	after modules device-mapper
}

run_addon() {
	local f="/lib/rcscripts/addons/${1}.sh"

	if [ -r "${f}" ]; then
		( . "${f}" )
	fi
}

start() {
	run_addon lvm-start
}

stop() {
	run_addon lvm-stop
}
